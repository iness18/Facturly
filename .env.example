# Configuration de la base de données MongoDB
MONGO_USERNAME=facturly_admin
MONGO_PASSWORD=CHANGE_ME_IN_PRODUCTION
MONGO_DATABASE=facturly_db

# URL de connexion MongoDB (utilisée par le backend)
# Notez le 'mongodb:27017' qui correspond au nom du service Docker
MONGODB_URI="mongodb://facturly_user:CHANGE_ME_IN_PRODUCTION@localhost:27017/facturly_db?authSource=facturly_db"

# Variables pour le frontend (Next.js)
# L'URL publique du backend que le navigateur utilisera
NEXT_PUBLIC_API_URL=http://localhost:3001
FRONTEND_URL=http://localhost:3000

# Sécurité
JWT_SECRET=GENERATE_A_STRONG_SECRET_HERE
NODE_ENV=development

# Port du backend
PORT=3001