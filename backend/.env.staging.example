# Configuration MongoDB Atlas Staging
MONGODB_URI="mongodb+srv://facturly_staging_user:YOUR_STAGING_PASSWORD@facturly-staging.xxxxx.mongodb.net/facturly_staging?retryWrites=true&w=majority"

# Sécurité Staging
NODE_ENV=staging
JWT_SECRET=YOUR_STAGING_JWT_SECRET_MIN_32_CHARS

# URLs Staging
FRONTEND_URL=https://staging.your-domain.com
NEXT_PUBLIC_API_URL=https://api-staging.your-domain.com

# Port
PORT=3001

# Logging
LOG_LEVEL=debug

# CORS
CORS_ORIGIN=https://staging.your-domain.com

# Rate Limiting (plus permissif pour les tests)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200

# Session
SESSION_SECRET=YOUR_SESSION_SECRET_FOR_STAGING

# Email (environnement de test)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=your_mailtrap_user
SMTP_PASS=your_mailtrap_pass

# Monitoring (optionnel)
SENTRY_DSN=https://your-staging-sentry-dsn@sentry.io/project-id