# Configuration MongoDB Atlas Production
MONGODB_URI="mongodb+srv://facturly_prod_user:YOUR_SECURE_PASSWORD@facturly-production.xxxxx.mongodb.net/facturly_prod?retryWrites=true&w=majority"

# Sécurité Production
NODE_ENV=production
JWT_SECRET=YOUR_SUPER_SECURE_JWT_SECRET_FOR_PRODUCTION_MIN_32_CHARS

# URLs Production
FRONTEND_URL=https://your-domain.com
NEXT_PUBLIC_API_URL=https://api.your-domain.com

# Port
PORT=3001

# Logging
LOG_LEVEL=info

# CORS
CORS_ORIGIN=https://your-domain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session
SESSION_SECRET=YOUR_SESSION_SECRET_FOR_PRODUCTION

# Email (si applicable)
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USER=noreply@your-domain.com
SMTP_PASS=your_smtp_password

# Monitoring (optionnel)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
NEW_RELIC_LICENSE_KEY=your_new_relic_key